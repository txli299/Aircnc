<% layout('layouts/boilerplate')%>
<h1>User Infomation</h1>

<div class="row">
    <div class="col-6">
        <% for (let user of users){%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">User name: <%= user.username %> </h5>
                        <p>User id: <%= user._id %>User id: </p>
                        <form class="d-inline" action="/manager/<%= user._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
    </div>
</div>